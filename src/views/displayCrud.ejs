<!DOCTYPE html>
<html>
  <head>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      .action {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-around;
      }
      .action a {
        border: 2px solid red;
        padding: 5px 5px;
        border-radius: 10px;
        text-decoration: none;
        color: black;
        background: red;
      }
      .edit {
        background: orange !important;
      }
      .action {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <h2>HTML Table</h2>
    <table>
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>PhoneNumber</th>
        <th class="action">Action</th>
      </tr>
      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].email%></td>
        <td><%= data[i].firstName %></td>
        <td><%= data[i].lastName %></td>
        <td><%= data[i].address%></td>
        <td><%= data[i].phoneNumber %></td>
        <td class="action">
          <a
            href="/edit-crud?id=<%= data[i].id %>"
            type="button"
            class="edit"
            target="_blank"
            >Edit</a
          >
          <a href="" type="button" target="_blank">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
