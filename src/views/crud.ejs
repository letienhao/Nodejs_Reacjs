            <div class="form-outline mb-4">
              <input type="text" id="form2Example2" name="lastName" class="form-control" />
              <label class="form-label" for="form2Example2">LastName</label>
            </div>
                 <!-- Phone number -->
                 <div class="form-outline mb-4">
                  <input type="text" id="form2Example2" name="phoneNumber" class="form-control" />
                  <label class="form-label" for="form2Example2">PhoneNumber</label>
                </div>
                    <!-- Phone number -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form2Example2" name="address" class="form-control" />
                      <label class="form-label" for="form2Example2">Address</label>
                    </div>
                <div className="col-6">
                  <!-- Phone number -->
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">Role</label>
                    <select class="form-select" name="roleId"   aria-label="Default select example">
                      <option selected>Select Gender</option>
                      <option value="1">Admin</option>
                      <option value="2">Doctor</option>
                      <option value="3">Patient</option>
                    </select>
                  </div>
            <!-- gender -->
            <select class="form-select" name="gender" aria-label="Default select example">
              <option selected>Select Gender</option>
              <option value="1">Name</option>
              <option value="0">Ná»¯</option>
            </select>
                </div>
